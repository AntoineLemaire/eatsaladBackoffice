<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title></title>
        <style>*{font-family:Helvetica, sans-serif}</style>
    </head>
    <body>
        <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable">
            <tr>
                <td align="center" valign="top">
                    <table border="0" cellpadding="20" cellspacing="0" width="600" id="emailContainer">
                        <tr>
                            <td align="center" valign="top">
                                <table border="0" cellpadding="20" cellspacing="0" width="50%" id="emailHeader">
                                    <tr>
                                        <td align="center" valign="top">
                                            <img width="150" src="http://localhost/eatsaladBackoffice/web/img/baratcorportate-logo.png"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td align="center" valign="top">
                                <table border="0" cellpadding="20" cellspacing="0" width="100%" id="emailFooter">
                                    <tr>
                                        <td align="right" style="padding:0px 5px" valign="top" width="50%">
                                            <p>Visite de conformité effectuée par</p>
                                            </td>
                                        <td align="left" style="padding:0px 5px" valign="top" width="50%">
                                            <p style="font-weight:bold">{{ evaluation.getControllerName() }}</p>
                                            </td>
                                        </tr>
                                    <tr>
                                        <td align="right" style="padding:0px 5px" valign="top" width="50%">
                                            <p>Dans le restaurant</p>
                                            </td>
                                        <td align="left" style="padding:0px 5px" valign="top" width="50%">
                                            <p style="font-weight:bold">{{ evaluation.getRestaurant().getName() }}</p>
                                            </td>
                                        </tr>
                                    <tr>
                                        <td align="right" style="padding:0px 5px" valign="top" width="50%">
                                            <p>Le</p>
                                            </td>
                                        <td align="left" style="padding:0px 5px" valign="top" width="50%">
                                            <p style="font-weight:bold">{{ evaluation.getDate()|date('d/m/Y') }}</p>
                                            </td>
                                        </tr>
                                    <tr>
                                        <td align="right" style="padding:0px 5px" valign="top" width="50%">
                                            <p>À</p>
                                            </td>
                                        <td align="left" style="padding:0px 5px" valign="top" width="50%">
                                            <p style="font-weight:bold">{{ evaluation.getDate()|date('h:m:s') }}</p>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        <tr>
                            <td align="center" valign="top">
                                <table border="0" cellpadding="20" cellspacing="0" width="100%" id="emailBody">
                                    <tr>
                                        <td align="center" valign="top">
                                            <p>Signature du contrôleur</p>
                                            <img width="100%" src="http://localhost/eatsaladBackoffice/web/uploads/photos/{{ evaluation.getControllerSignature() }}"/>
                                            </td>
                                        <td align="center" valign="top">
                                            <p>Signature du franchisé ou responsable du magasin</p>
                                            <img width="100%" src="http://localhost/eatsaladBackoffice/web/uploads/photos/{{ evaluation.getFranchisedSignature() }}"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>